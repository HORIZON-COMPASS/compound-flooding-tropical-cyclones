### Import some useful python libraries
import os
from snakemake.io import Wildcards

curdir = os.getcwd()

def get_argbbox(wildcards):
    arg_bbox = "{" + "'bbox': "+ config['bbox'] + "}"
    return arg_bbox

rule all:
    input:
        expand(("{dir_run}"+"/sfincs_"+"{runname}"+"/sfincs_map.nc"), dir_run=config['dir_runs'], runname=config['runname']), 
        expand(("{dir_run}"+"/sfincs_"+"{runname}"+"/sfincs_his.nc"), dir_run=config['dir_runs'], runname=config['runname'])

rule make_base_model:
    params:
        dir_run = "{dir_run}"+"/sfincs_"+"{runname}",
        rmfile = "{dir_run}"+"/sfincs_"+"{runname}/"+"hydromt_data.yml",
        arg_bbox = get_argbbox
    output: 
        msk_file = "{dir_run}"+"/sfincs_{runname}"+"/sfincs.msk"
    shell:
        '''
        hydromt build sfincs {params.dir_run} --region "{params.arg_bbox}" -i sfincs_base_build.yml --force-overwrite -v 
        del {params.rmfile} || rm {params.rmfile}
        '''

rule add_forcing:
    input:
        msk_file = "{dir_run}"+"/sfincs_"+"{runname}"+"/sfincs.msk"
    params:
        dir_run = "{dir_run}"+"/sfincs_"+"{runname}",
        forcing_yml = "sfincs_"+"{runname}"+"_forcing.yml",
        path_spw_ori = config['dir_spw']+"/"+config['file_spw'],
        path_spw_run = "{dir_run}"+"/sfincs_"+"{runname}/"+config['file_spw']
    output:
        bzs_file = "{dir_run}"+"/sfincs_"+"{runname}"+"/sfincs.bzs" 
    shell:
        '''
        cp {params.path_spw_ori} {params.path_spw_run}
        hydromt update sfincs {params.dir_run} -i {params.forcing_yml} -v
        '''

